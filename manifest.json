{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Polyfeed",
    "icons": {
        "128": "./public/Polyfeed_Social_Grey.png"
    },
    "action": {
        "default_popup": "./public/popup.html",
        "default_icon": {
            "32": "./public/Polyfeed_Social_Grey.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://lms.monash.edu/*",
                "https://learning.monash.edu/*",
                "https://docs.google.com/*"
            ],
            "exclude_matches": [
                "http://localhost:3000/"
            ],
            "js": [
                "./js/index.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "./public/background.js"
    },
    "permissions": [
        "storage",
        "activeTab"
    ]
}